<h1 class="text-center">Login</h1>
<br>
<%= form_tag '/login', :class => "form-horizontal center" do %>

  <div class="form-group">
    <%= label_tag :email, "Email", class:"col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= text_field_tag :email, "", class: "form-control" %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :password, "Password", class:"col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= password_field_tag :password, "", class: "form-control" %>
    </div>
  </div>

  <%= submit_tag "Submit", class:"btn btn-primary center-block" %>

<% end %>